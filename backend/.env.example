# Database
DATABASE_URL=postgresql://user:password@localhost:5432/vantage

# Sentinel Hub API
CLIENT_ID=your_sentinel_hub_client_id
CLIENT_SECRET=your_sentinel_hub_client_secret

# Redis (for caching and Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# AWS S3 Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=vantage-satellite-storage

# Flask
SECRET_KEY=your_secret_key_here
FLASK_ENV=development

# Image Storage (local fallback)
IMAGES_DIR=./images

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0